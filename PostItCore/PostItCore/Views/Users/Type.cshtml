@model PostItCore.ViewModels.Type
@{
    ViewData["Title"] = "Type";
}

<h2>Type</h2>
<form asp-action="Type" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="DestId" value="@Model.DestId" />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="DepId" value="@Model.DepId" />
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Text</label>
        <input type="text" asp-for="Text" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send to @Model.DepName" class="btn btn-default" />
    </div>
</form>
