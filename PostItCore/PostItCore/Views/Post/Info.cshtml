@model PostItCore.ViewModels.PostInfo
@{
    ViewData["Title"] = "Info";
}
<h2>@Model.Head</h2>
<hr />
<p>@Model.Desc</p>
<hr />
@if (User.Identity.IsAuthenticated)
{

    if (!Model.Favor)
    {
        <form method="post" action="~/Post/Info?postId=@Model.Id&favor=true">
            <input type="submit" value="Respect" class="btn btn-default" />
        </form>
    }
    else
    {
        <form method="post" action="~/Post/Info?postId=@Model.Id&favor=false">
            <input type="submit" value="Disrespect" class="btn btn-default" />
        </form>
    }
}
    <p>Reputation: @Model.Rep</p>
    <p>@Model.Date</p>
    <a href="~/User/Info?Id=@Model.UserId">@Model.UserNick</a>
    <a href="~/Group/Info?Id=@Model.GroupId">@Model.GroupName</a>
