@model PostItCore.ViewModels.PostIndex
@{
    ViewData["Title"] = "Posts";
}
@if(Model.UserId != "0")
{
    <a href="~/Users/Info?Id=@Model.UserId"></a><h2>User's posts</h2>
}
else if(Model.GroupId != 0)
{
    <a href="~/Group/Info?Id=@Model.GroupId"><h2>Group's posts</h2></a>
}
else
{
    <h2>Global</h2>
}
@if (Convert.ToInt32(ViewData["Pages"]) != 0)
{
    if (Model.Page == 0)
    {
        <a href="~/Post/Index?postId=@Model.Posts.First().Id&page=@(Model.Page + 1)">Next</a>
    }
    else if (Model.Page == Convert.ToInt32(ViewData["Pages"]))
    {
        <a href="~/Post/CommentIndex?postId=@Model.Posts.First().Id&page=@(Model.Page - 1)">Previous</a>
    }
    else
    {
        <a href="~/Post/CommentIndex?postId=@Model.Posts.First().Id&page=@(Model.Page - 1)">Previous    </a>
        <a href="~/Post/CommentIndex?postId=@Model.Posts.First().Id&page=@(Model.Page + 1)">Next</a>
    }
}
@if (Model != null)
{
    foreach (var post in Model.Posts)
    {
        <hr />
        <a href="~/Post/Info?postId=@post.Id">@post.Head</a>
    }
}