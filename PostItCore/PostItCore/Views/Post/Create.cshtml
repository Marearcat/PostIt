@model PostItCore.Models.Post
@{
    ViewData["Title"] = "Create";
}

<h2>Create Post</h2>

<form asp-action="Create" asp-controller="Post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="UserId" value="@ViewData["userId"]" />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="GroupId" value="@ViewData["groupId"]" />
    </div>
    <div class="form-group">
        <label asp-for="Head" class="control-label">Head</label>
        <input type="text" asp-for="Head" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Desc" class="control-label">Description</label>
        <input type="text" asp-for="Desc" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>